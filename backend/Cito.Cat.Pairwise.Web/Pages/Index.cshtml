@page
@model IndexModel
@{
    ViewData["Title"] = "Start";
}

<div class="row align-items-end justify-content-center h-50">
    <div class="col-3 text-center">
        <h1 class="display-4 mb-5">Pairwise</h1>
        <form method="post">
            <div class="input-group input-group-lg">
                <input autofocus asp-for="StartCode" type="text" class="form-control" placeholder="Start code" aria-label="Start code" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" id="button-addon2">Start</button>
                </div>
            </div>
        </form>


    </div>
</div>
<div class="row align-items-start justify-content-center flex-fill">
    <div class="col-3 text-center">
        <span asp-validation-for="StartCode" class="text-danger"></span>
    </div>
</div>

