@page
@model SectionsModel
@{
    ViewData["Title"] = "Sections";
}
<h1>Sections</h1>


<div class="row">
    <div class="col-sm-9">
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>Title</th>
                <th>#items</th>
                <th>CAT section Id</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var testSection in Model.Sections)
            {
                <tr onclick="window.location = './Section?id=@testSection.Id'">
                    <td>@testSection.Title</td>
                    <td>@testSection.Items.Count</td>
                    <td>@testSection.CatSectionId</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>